

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.lameiro.e.scorekeeper.MainActivity">

                <ImageView
                    android:src="@drawable/tennis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/relLaySets">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Sets"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:id="@+id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="1"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="2"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="3"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="4"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="5"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:textAlignment="center"
                            android:layout_weight="0.16666"/>

                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="A"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set1TeamA"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set2TeamA"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set3TeamA"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set4TeamA"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:textAlignment="center"
                            android:layout_weight="0.16666"
                            android:id="@+id/set5TeamA"/>

                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="B"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_weight="0.16666"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set1TeamB"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set2TeamB"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set3TeamB"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:layout_weight="0.16666"
                            android:textAlignment="center"
                            android:id="@+id/set4TeamB"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_toEndOf="@id/sets"
                            android:textAlignment="center"
                            android:layout_weight="0.16666"
                            android:id="@+id/set5TeamB"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/HorizLinLay"
                    android:layout_below="@id/relLaySets">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:text="Player A"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/team_a_score"
                            android:text="0"
                            android:textSize="40sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"/>


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="scored"
                            android:onClick="TeamAScored"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="4dp"/>



                    </LinearLayout>



                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="16dp"
                            android:text="Player B"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:id="@+id/team_b_score"
                            android:textSize="40sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginBottom="4dp"
                            android:text="Scored"
                            android:onClick="TeamBScored"/>


                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/HorizLinLay">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="0dp"
                        android:onClick="reset"/>



                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
